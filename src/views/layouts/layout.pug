include ../../views/components/modal
- const { name, page_title } = htmlWebpackPlugin.options
- const website_title = `Circule | ${page_title}`
doctype html
html(lang=locale)
  head
    title=website_title
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no")
    meta(name="description" content="")
    meta(property="og:title" content="")
    meta(property="og:description" content="")
    meta(property="og:image" content='')
    meta(property="og:url" content="")
    meta(property="og:website" content="website")
    meta(property="og:site_name" content=website_title)
    meta(property="og:locale" content="")
    meta(property="og:image:width" content="")
    meta(property="og:image:height" content="")
    meta(name="twitter:card" content="summary")
    meta(name="twitter:url" content="")
    meta(name="twitter:title" content="")
    meta(name="twitter:description" content="")
    meta(name="twitter:image" content='')
  body(data-barba="wrapper")
    include ../partials/no_js
    a.logo.hover.text-link(href="/") .CIRCULE
    .wrap(class=name data-barba="container" data-barba-namespace=name)
      include ../partials/header
      main(data-scroll-container)
        block main
      +modal
      .transition-panel
      canvas.circle-canvas.circle-canvas--main
    .spy.spy--hidden
